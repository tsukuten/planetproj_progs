# .editorconfig -- Config file for EditorConfig. http://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[*.c]
indent_style = space
indent_size = 4

[*.{ino,h}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 4
max_line_length = 0
trim_trailing_whitespace = false
